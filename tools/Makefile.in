srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

SOURCES=\
	lvm.c\
	pvdisplay.c

TARGETS=\
	lvm

include ../make.tmpl

lvm: $(OBJECTS) $(top_srcdir)/lib/liblvm.a
	$(CC) -o lvm $(OBJECTS) -L$(top_srcdir)/lib -llvm $(EXTRA_LIBS)

install:
	$(INSTALL) -c -d $(sbindir);
	$(INSTALL) -c -o $(OWNER) -g $(GROUP) -m 555 -s lvm $(sbindir)/lvm
	( cd $(sbindir); \
	  for v in ${SOURCES:.c=}; do \
	  	if [ "x$$v" != "xlvm" ]; then \
	  		$(LN_S) -f lvm $$v; \
		fi \
	  done; \
	)


